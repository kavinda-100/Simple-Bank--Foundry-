# Polygon Mumbai Testnet (optional)
MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY_HERE

# Arbitrum Sepolia Testnet (optional)
ARBITRUM_SEPOLIA_RPC_URL=https://arb-sepolia.g.alchemy.com/v2/YOUR_API_KEY_HERE

# ================================
# üìã ETHERSCAN API KEYS
# ================================
# For contract verification (get from https://etherscan.io/apis)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY_HERE

# Polygon API key (for verification on Polygon)
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY_HERE

# ================================
# üè† LOCAL DEVELOPMENT
# ================================
# Local Anvil RPC URL (default)
LOCAL_RPC_URL=http://localhost:8545

# Local Anvil private key (default first account)
# This is safe to commit as it's only for local development
LOCAL_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ================================
# üí∞ CONTRACT ADDRESSES (after deployment)
# ================================
